<Window x:Class="Labb3_NET22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_NET22"
        mc:Ignorable="d"
        Title="Quiz Game" Height="400" Width="800" Background="Beige">
    <Grid>
        <StackPanel x:Name="MainMenuPanel"   VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Quiz Game!" FontSize="20" TextAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Play Quiz" Click="Play_Click" Width="200" Margin="5"/>
            <Button Content="Edit Quiz" Click ="Edit_Click" Width="200" Margin="5"/>
            <Button Content="Create Quiz" Click="Create_Click" Width="200" Margin="5"/>
        </StackPanel>
        <ContentControl x:Name="MainContentControl"/>
    </Grid>
</Window>
