<UserControl x:Class="Labb3_NET22.CreateQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_NET22"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="550">
    <UserControl.Resources>
        <local:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Create Quiz" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
        <!--Quiz Title-->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Enter quiz title: "  FontSize="15" Margin="0,0,0,5"/>
            <TextBox x:Name="QuizTitleTextBox" Padding="5" Height="30"/>
            <!--<TextBlock Text="Category" FontSize="15" Height="30" />
            <TextBox x:Name="CategoryTextBox" Padding="5" Height="30"/>--> 
        </StackPanel>
        
        <!--Question-->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Enter question:"  FontSize="15" Margin="0,0,0,5"/>
            <TextBox x:Name="QuestionTextBox" Padding="5" Height="40" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,5" VerticalAlignment="Center">
                <Button x:Name="UploadImageButton" Content="Upload Image" Click="UploadImageButton_Click" Width="120" Height="30"/>
                <TextBlock x:Name="ImagePathTextBlock"
                           Text="{Binding CurrentImagePath}"
                           Visibility="{Binding CurrentImagePath, Converter={StaticResource NullOrEmptyToVisibilityConverter}}"
                           VerticalAlignment="Center" Foreground="Gray"/>
                <TextBlock Text="Category:" VerticalAlignment="Center" FontSize="15" Margin="20,0,0,0"/>
                <TextBox x:Name="CategoryTextBox" Width="100" Height="30" Margin="10,0" VerticalAlignment="Center" Padding="5" />
            </StackPanel>
            <Image x:Name="QuestionImagePreview" 
                   Source="{Binding CurrentImagePath}"
                   Visibility="{Binding CurrentImagePath, Converter={StaticResource NullOrEmptyToVisibilityConverter}}"
                   Height="100" Stretch="Uniform" Margin="0,5,0,0" />
        </StackPanel>
        <!--Answers-->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Answer1:"/>
            <TextBox x:Name="Answer1TextBox" Padding="5" Margin="0,0,0,10"/>

            <TextBlock Text="Answer2:"/>
            <TextBox x:Name="Answer2TextBox" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Answer3:"/>
            <TextBox x:Name="Answer3TextBox" Margin="0,0,0,10" Padding="5"/>
        </StackPanel>
        <!--Correct Answer-->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Correct Answer:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="CorrectAnswerCombo" Width="100">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
            </ComboBox>

        </StackPanel>
        <!--Buttons-->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="AddButton" Content="Add Question" 
                    Width="100" Height="35" Margin="5" Click="AddButton_Click"/>
            <Button x:Name="ClearButton" Content="Clear" 
                    Width="100" Height="35" Margin="5" Click="ClearButton_Click"/>
            <Button x:Name="SaveButton"  Content="Save Quiz"
                    Width="100" Height="35" Margin="5" Click="SaveButton_Click"/>
            <Button x:Name="BackButton" Content="Back to Main Menu" 
                    Width="100" Height="35" Margin="5" Click="BackToMenu_Click"/>

        </StackPanel>
        <!--Question List-->
        <GroupBox Grid.Row="6" Header="Added Questions" Margin="0,0,0,10">
            <ScrollViewer Height="95">
                <TextBox x:Name="QuestionOutPutTextBox" IsReadOnly="True" TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        Background="White"
                        Padding="5"/>
            </ScrollViewer>             
        </GroupBox>
        
        <TextBlock Grid.Row="7" x:Name="StatusTextBlock" Foreground="Green" FontStyle="Italic"
                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
    </Grid>
</UserControl>
